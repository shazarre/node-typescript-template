{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "removeComments": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "typeRoots": ["./types", "./node_modules/@types"],
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": ["src/*"]
        }
    },
    "exclude": ["node_modules"]
}
